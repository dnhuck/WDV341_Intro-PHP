Use this file to create a gallery with flexbox.
  -->

<style = "text/css">
	
    body{
        font-family: arial;
        font-size: 14px;
    }
    
    figcaption{
    font-style: italic;
    margin-bottom: 15px;
    text-align: center;
    font-size: 12px;
}

figure{
    background-color: pink;
    border: 2px solid purple;
    border-radius: 15px;
    box-shadow: 5px 5px 3px #888888;
    margin: 20px;
    padding: 20px;
    width: 250px;
    
}

.flex-container{
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    background-color: lightyellow;
    padding: 10px;
    border: 2px solid black;
	border-radius: 15px;
}

h1,h3,p{
    text-align: center;
}

h1,h3{
	border: double black;
	background-color: pink;
	padding: 3px;
	color: red;
}

img{
    border: 3px solid purple;
	padding: 5px;
	margin: 5px;
}

@media screen and (min-width: 200px){
		body{
			background-color: lightblue;}
		.flex-container{
			display: flex;
			flex-wrap: wrap;
			justify-content: center;
			background-color: lightyellow;
			padding: 10px;
			border: 2px solid black;
			border-radius: 15px;}
		h1,h3{
			border-radius: 25px;
			background-color: lightyellow;
			color: lightblue;
		}
		img{
			border: 2px solid black;
			padding: 2px; 
		}
	}
	
    
	@media screen and (min-width: 800px){
		body{
			background-color: lightblue;}
		.flex-container{
		display: flex;
		flex-wrap: wrap;
		justify-content: center;
		background-color: white;
		padding: 10px;
		border: 2px solid black;
		border-radius: 15px;}
		h1,h3{
			border: 2px solid black;
			border-radius: 0px;
			background-color: pink;
			color: red;
		}
	}
</style>
